{% extends 'layout.html.twig' %}

{% block extrameta %}
    <meta name="description" content="Pagina para ver los posts publicados en el sitio">
{% endblock %}

{% block title %}Ver Posts Publicados{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/administrador.css') }}" />
{% endblock %}

{% block body %}
    {% for mensajeFlash in app.session.flashbag.get('notificacion') %}
        <div class="contenedor-notificacion">
            <p>{{ mensajeFlash }}</p>
        </div>
    {% endfor %}
    <section>
        <h2>Posts Publicados</h2>
        <div class="seccion-contenedor">
            {% for post in posts %}
                <article class="articulo">
                    <h3>{{ post.titulo }}</h3>
                    <div class="seccion-articulo">
                        <figure class="imagen-post">
                            <img src="{{ asset('uploads')~'/'~post.imagen }}" alt="{{ post.imagen }}">
                        </figure>
                        <div class="tema-y-etiquetas">
                            <p class="tematica">Curiosidades</p>
                            <div class="tags">
                                {% for tag in post.tags|trim|split(' ') %}
                                    <span>#{{ tag }}</span>
                                {% endfor %}
                            </div>
                            <date class="fecha">{{ post.fechacreacion|date("d/m/Y") }}</date>
                        </div>
                    </div>
                    <div class="descripcion-articulo">
                        {% for parraf in post.descripcion|trim|split('\n') %}
                            <p>{{ parraf }}</p>
                        {% endfor %}
                    </div>
                    {% if modificar is defined %}
                        <a class="enlace-para-modificar-publicados" href="{{ path('view_modify_post', {'post_id' : post.id}) }}">Modificar</a>
                    {% elseif eliminar is defined %}
                        <a class="enlace-para-modificar-publicados" href="{{ path('delete_post', {'post_id' : post.id}) }}">Eliminar</a>
                    {% endif %}
                </article>
            {% endfor %}
        </div>
    </section>
{% endblock %}


